<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Tab Group Example</h:title>

    <model>
      <instance>
        <faims id="tabgroup_example">
          <!-- Empty Arch Entity -->
          <empty_entity>
            <tab>
              <update></update>
              <save></save>
              <next></next>
            </tab>
          </empty_entity>
          <!-- Simple Arch Entity with free text only -->
          <simple_entity_1>
            <tab>
              <name></name>
              <count></count>
              <date></date>
              <time></time>
              <location></location>
              <type></type>
              <update></update>
              <save></save>
              <next></next>
            </tab>
          </simple_entity_1>
          <!-- Simple Arch Entity with vocabs, measures and certainties-->
          <simple_entity_2>
            <tab>
              <name></name>
              <count></count>
              <count-description></count-description>
              <count-certainty></count-certainty>
              <date></date>
              <time></time>
              <location></location>
              <location-certainty></location-certainty>
              <type></type>
              <update></update>
              <save></save>
              <next></next>
            </tab>
          </simple_entity_2>
          <!-- Simple Arch Entity with vocabs, measures and certainties in multiple tabs -->
          <simple_entity_3>
            <tab1>
              <name></name>
              <count></count>
              <count-description></count-description>
              <count-certainty></count-certainty>
              <update></update>
              <save></save>
              <next></next>
            </tab1>
            <tab2>
              <date></date>
              <time></time>
            </tab2>
            <tab3>
              <location></location>
              <location-certainty></location-certainty>
              <type></type>
            </tab3>
          </simple_entity_3>
          <relationship>
            <tab1>
              <name></name>
              <update></update>
              <save></save>
            </tab1>
            <tab2>
              <top_entity></top_entity>
              <bottom_entity></bottom_entity>
              <relationship></relationship>
              <save></save>
            </tab2>
          </relationship>
        </faims>
      </instance>

      <bind nodeset="/faims/simple_entity_1/tab/name" type="string"/>
      <bind nodeset="/faims/simple_entity_1/tab/count" type="integer"/>
      <bind nodeset="/faims/simple_entity_1/tab/date" type="date"/>
      <bind nodeset="/faims/simple_entity_1/tab/time" type="time"/>

      <bind nodeset="/faims/simple_entity_2/tab/name" type="string"/>
      <bind nodeset="/faims/simple_entity_2/tab/count" type="integer"/>
      <bind nodeset="/faims/simple_entity_2/tab/count-description" type="string"/>
      <bind nodeset="/faims/simple_entity_2/tab/count-certainty" type="decimal"/>
      <bind nodeset="/faims/simple_entity_2/tab/date" type="date"/>
      <bind nodeset="/faims/simple_entity_2/tab/time" type="time"/>
      <bind nodeset="/faims/simple_entity_2/tab/location-certainty" type="decimal"/>

      <bind nodeset="/faims/simple_entity_3/tab1/name" type="string"/>
      <bind nodeset="/faims/simple_entity_3/tab1/count" type="integer"/>
      <bind nodeset="/faims/simple_entity_3/tab1/count-description" type="string"/>
      <bind nodeset="/faims/simple_entity_3/tab1/count-certainty" type="decimal"/>
      <bind nodeset="/faims/simple_entity_3/tab2/date" type="date"/>
      <bind nodeset="/faims/simple_entity_3/tab2/time" type="time"/>
      <bind nodeset="/faims/simple_entity_3/tab3/location-certainty" type="decimal"/>
      
      <bind nodeset="/faims/relationship/tab1/name" type="string"/>

    </model>
  </h:head>

  
  <h:body>
    <group ref="empty_entity" faims_archent_id="empty_entity">
      <label>Empty Entity Example</label>
      <group ref="tab">
        <label>Empty Entity</label>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
    <group ref="simple_entity_1" faims_archent_id="simple_entity">
      <label>Simple Entity Example</label>
      <group ref="tab">
        <label>Simple Entity 1</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
        <select1 ref="location" faims_attribute_name="location">
          <label>Location:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
    <group ref="simple_entity_2" faims_archent_id="simple_entity">
      <label>Simple Entity Example</label>
      <group ref="tab">
        <label>Simple Entity 2</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="count-description" faims_attribute_name="count_description">
          <label>Description:</label>
        </input>
        <input ref="count-certainty" faims_attribute_name="count_certainty">
          <label>Certainty:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
        <select1 ref="location" faims_attribute_name="location">
          <label>Location:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <input ref="location-certainty" faims_attribute_name="location_certainty">
          <label>Certainty:</label>
        </input>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
    </group>
   
    <group ref="simple_entity_3" faims_archent_id="simple_entity">
      <label>Simple Entity Example</label>
      <group ref="tab1">
        <label>Simple Entity 3 T1</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count">
          <label>Count:</label>
        </input>
        <input ref="count-description" faims_attribute_name="count_description">
          <label>Description:</label>
        </input>
        <input ref="count-certainty" faims_attribute_name="count_certainty">
          <label>Certainty:</label>
        </input>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
      <group ref="tab2">
        <label>Simple Entity 3 T2</label>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
      </group>
      <group ref="tab3">
        <label>Simple Entity 3 T3</label>
        <select1 ref="location" faims_attribute_name="location" appearance="full">
          <label>Location:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <input ref="location-certainty" faims_attribute_name="location_certainty">
          <label>Certainty:</label>
        </input>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select>
      </group>
    </group>
     <group ref="relationship">
      <label>Relationship Example</label>
      <group ref="tab1">
        <label>Relationship Example</label>
        <input ref="name" faims_attribute_name="name">
            <label>Name:</label>
        </input>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
      </group>
      <group ref="tab2">
        <label>Entity Relationship Example</label>
        <select1 ref="top_entity">
	      <label>Top:</label>
	      <item>
	        <label>dummy</label>
	        <value>dummy</value>
	      </item>
	    </select1>
        <select1 ref="bottom_entity">
	      <label>Bottom:</label>
	      <item>
	        <label>dummy</label>
	        <value>dummy</value>
	      </item>
	    </select1>
	    <select1 ref="relationship">
	      <label>Relationship:</label>
	      <item>
	        <label>dummy</label>
	        <value>dummy</value>
	      </item>
	    </select1>
	  	<trigger ref="save">
          <label>Save</label>
        </trigger> 
      </group>
    </group>
  </h:body>
</h:html>
