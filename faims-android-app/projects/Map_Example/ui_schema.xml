<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Map Example</h:title>

    <model>
      <instance>
        <faims id="map_example">
          <tabgroup1>
              <tab1>
                  <show></show>
                  <new></new>
              </tab1>
              <tab2>
                  <map></map>
                  <refresh></refresh>
                  <clear></clear>
              </tab2>
          </tabgroup1>
          <tabgroup2>
              <tab1>  
                  <drawActions></drawActions> 
                  <drawActionBtn></drawActionBtn>               
                  <map></map>
                  <layers></<layers>
                  <layerActions></layerActions>
                  <layerActionBtn></layerActionBtn>
              </tab1>
          </tabgroup2>
        </faims>
      </instance>
    </model>
  </h:head>

   <bind nodeset="/faims/simple_entity_2/tab/name" type="string"/>
  <h:body>
    <group ref="tabgroup1">
      <label>Map Example</label>
      <group ref="tab1">
        <label>Controls</label>
        <trigger ref="show">
            <label>Show</label>
        </trigger>
        <trigger ref="new">
            <label>New</label>
        </trigger>
      </group>
      <group ref="tab2" faims_hidden="true" faims_scrollable="false">
        <label>Map</label>
        <input ref="map" faims_map="true">
            <label>Map:</label>
        </input>
        <trigger ref="refresh">
            <label>Refresh</label>
        </trigger>
        <trigger ref="clear">
            <label>Clear</label>
        </trigger>
      </group>
    </group>
    <group ref="tabgroup2">
      <label>Map Example</label>
      <group ref="tab1"  faims_scrollable="false">
        <label>Map</label>
        <select1 ref="drawActions">
            <label>Draw Actions:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1>
        <trigger ref="drawActionBtn">
            <label>Ok</label>
        </trigger>
        <input ref="map" faims_map="true">
            <label>Map:</label>
        </input>
        <select1 ref="layers">
            <label>Layers:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1>
        <select1 ref="layerActions">
            <label>Layers Actions:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1> 
        <trigger ref="layerActionBtn">
            <label>Ok</label>
        </trigger>
      </group>
    </group>
    
  </h:body>
</h:html>
