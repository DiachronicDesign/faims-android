<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Tab Group Example</h:title>

    <model>
      <instance>
        <faims id="tabgroup_example">
          <!-- Simple Arch Entity with vocabs, measures and certainties in multiple tabs -->
          <entity>
            <tab1>
              <showtab2></showtab2>
              <showtab3></showtab3>
              <newtab2></newtab2>
              <newtab3></newtab3>
              <update></update>
              <save></save>
              <cancel></cancel>
              <next></next>
            </tab1>
            <tab2>
              <name></name>
              <count></count>
              <count-description></count-description>
              <count-certainty></count-certainty>
              <date></date>
              <time></time>
              <cancel></cancel>
            </tab2>
            <tab3>
              <location></location>
              <location-certainty></location-certainty>
              <type></type>
              <cancel></cancel>
            </tab3>
          </entity>
          <relationship>
            <tab1>
              <name></name>
              <update></update>
              <save></save>
              <cancel></cancel>
            </tab1>
          </relationship>
        </faims>
      </instance>

      <bind nodeset="/faims/entity/tab2/name" type="string"/>
      <bind nodeset="/faims/entity/tab2/count" type="integer"/>
      <bind nodeset="/faims/entity/tab2/count-description" type="string"/>
      <bind nodeset="/faims/entity/tab2/count-certainty" type="decimal"/>
      <bind nodeset="/faims/entity/tab2/date" type="date"/>
      <bind nodeset="/faims/entity/tab2/time" type="time"/>
      <bind nodeset="/faims/entity/tab3/location-certainty" type="decimal"/>
      
      <bind nodeset="/faims/relationship/tab1/name" type="string"/>

    </model>
  </h:head>

  
  <h:body>
    <group ref="entity" faims_archent_type="simple_entity">
      <label>Simple Entity Example</label>
      <group ref="tab1">
        <label>First Tab</label>
        <trigger ref="showtab2">
          <label>Show Tab 2</label>
        </trigger>
        <trigger ref="showtab3">
          <label>Show Tab 3</label>
        </trigger>
        <trigger ref="newtab2">
          <label>New Tab 2</label>
        </trigger>
        <trigger ref="newtab3">
          <label>New Tab 3</label>
        </trigger>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="next">
          <label>Next</label>
        </trigger>
      </group>
      <group ref="tab2" faims_hidden="true">
        <label>Second Tab</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="count" faims_attribute_name="count" faims_attribute_type="measure">
          <label>Count:</label>
        </input>
        <input ref="count-description" faims_attribute_name="count" faims_attribute_type="freetext">
          <label>Description:</label>
        </input>
        <input ref="count-certainty" faims_attribute_name="count" faims_attribute_type="certainty">
          <label>Certainty:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
          <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
          <label>Time:</label>
        </input>
        <trigger ref="cancel">
          <label>Cancel</label>
        </trigger>
      </group>
      <group ref="tab3" faims_hidden="true">
        <label>Third Tab</label>
        <select1 ref="location" faims_attribute_name="location" appearance="full" faims_attribute_type="freetext">
          <label>Location:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <input ref="location-certainty" faims_attribute_name="location" faims_attribute_type="certainty">
          <label>Certainty:</label>
        </input>
        <select ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select>
        <trigger ref="cancel">
          <label>Cancel</label>
        </trigger>
      </group>
    </group>
     <group ref="relationship" faims_rel_type="abovebelow">
      <label>Relationship Example</label>
      <group ref="tab1">
        <label>Relationship Example</label>
        <input ref="name" faims_attribute_name="name">
            <label>Name:</label>
        </input>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="cancel">
          <label>Cancel</label>
        </trigger>
      </group>
    </group>
  </h:body>
</h:html>
