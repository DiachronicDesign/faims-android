<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Map UI Example</h:title>

    <model>
      <instance>
        <faims id="map_ui_example">
          <user>
              <tab1>
                  <users></users>
              </tab1>
          </user>
          <tabgroup1>
              <tab1>
                  <map></map>
              </tab1>
              <tab2>
                  <entity></entity>
                  <name></name>
                  <value></value>
                  <clear></clear>
                  <save></save>
                  <update></update>
                  <load></load>
              </tab2>
              <tab3>
                  <relationship></relationship>
                  <name></name>
                  <clear></clear>
                  <save></save>
                  <update></update>
                  <load></load>
              </tab3>
          </tabgroup1>
        </faims>
      </instance>
    </model>
  </h:head>

  <h:body>
    <group ref="user">
      <label>User List</label>
      <group ref="tab1" faims_scrollable="false">
        <label>User List</label>
        <select1 ref="users" appearance="compact">
          <label>Users:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
      </group>
    </group>
    <group ref="tabgroup1">
      <label>Map UI Example</label>
      <group ref="tab1"  faims_scrollable="false">
        <label>Map</label>
        <input ref="map" faims_map="true">
            <label>Map:</label>
        </input>
      </group>
      <group ref="tab2">
          <label>Entity</label>
          <select1 ref="entity">
              <label>Entity</label>
              <item>
                  <label>dummy</label>
                  <value>dummy</value>
              </item>
          </select1>
          <input ref="name">
              <label>Name:</label>
          </input>
          <input ref="value">
              <label>Value:</label>
          </input>
          <trigger ref="clear">
              <label>Clear</label>
          </trigger>
          <trigger ref="save">
              <label>Save</label>
          </trigger>
          <trigger ref="update">
              <label>Update</label>
          </trigger>
          <trigger ref="load">
              <label>Load</label>
          </trigger>
      </group>
      <group ref="tab3">
          <label>Relationship</label>
          <select1 ref="relationship">
              <label>Relationship</label>
              <item>
                  <label>dummy</label>
                  <value>dummy</value>
              </item>
          </select1>
          <input ref="name">
              <label>Name:</label>
          </input>
          <trigger ref="clear">
              <label>Clear</label>
          </trigger>
          <trigger ref="save">
              <label>Save</label>
          </trigger>
          <trigger ref="update">
              <label>Update</label>
          </trigger>
          <trigger ref="load">
              <label>Load</label>
          </trigger>
      </group>
    </group>
  </h:body>
</h:html>
