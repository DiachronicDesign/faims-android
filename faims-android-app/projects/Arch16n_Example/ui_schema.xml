<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Simple Example</h:title>

    <model>
      <instance>
        <faims id="simple_example">
          <style>
            <orientation>
                <orientation></orientation>
            </orientation>
            <childcontainer>
                <layout_weight></layout_weight>
            </childcontainer>
          </style>
          <user>
              <tab1>
                  <users></users>
              </tab1>
          </user>
          <tabgroup1>
              <tab1>
                  <container>
                     <child1>
                         <child2>
                             <name></name>
                         </child2>
                         <child3>
                             <value></value>
                         </child3>
                     </child1>
                     <child4>
                         <type></type>
                     </child4> 
                  </container>
                  <date></date>
                  <time></time>
                  <settype></settype>
              </tab1>
              <tab2>
                  <location></location>
                  <supervisor></supervisor>
              </tab2>
          </tabgroup1>
        </faims>
      </instance>

      <bind nodeset="/faims/tabgroup1/tab1/container/child1/child2/name" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/container/child1/child3/value" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab1/date" type="date"/>
      <bind nodeset="/faims/tabgroup1/tab1/time" type="time"/>

    </model>
  </h:head>

  
  <h:body>
    <group ref="style">
      <label></label>
      <group ref="orientation">
        <label></label>
        <input ref="orientation">
            <label>horizontal</label>
        </input>
      </group>
      <group ref="childcontainer">
        <label></label>
        <input ref="layout_weight">
            <label>1</label>
        </input>
      </group>
    </group>
    <group ref="user">
      <label>User List</label>
      <group ref="tab1" faims_scrollable="false">
        <label>User List</label>
          <select1 ref="users" appearance="compact">
          <label>Users:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
      </group>
    </group>
    <group ref="tabgroup1" faims_archent_type="simple">
      <label>Simple Entity Example</label>
      <group ref="tab1">
        <label>{entity} Tab1</label>
        <group ref="container" faims_style="orientation">
          <label></label>
          <group ref="child1" faims_style="childcontainer orientation">
            <label></label>
            <group ref="child2" faims_style="childcontainer">
              <label></label>
              <input ref="name" faims_attribute_name="name" faims_attribute_type="freetext">
                <label>{name}:</label>
              </input>
            </group>
            <group ref="child3" faims_style="childcontainer">
              <label></label>
              <input ref="value" faims_attribute_name="value" faims_attribute_type="measure">
                <label>{value}:</label>
              </input>
            </group>
            
          </group>
          <group ref="child4" faims_style="childcontainer">
            <label></label>
            <select1 ref="type" faims_attribute_name="type" faims_attribute_type="vocab">
              <label>Type:</label>
              <item>
                <label>dummy</label>
                <value>dummy</value>
              </item>
            </select1>
          </group>
        </group>
        <input ref="date" faims_attribute_name="date" faims_attribute_type="freetext">
            <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time" faims_attribute_type="freetext">
            <label>Time:</label>
        </input>
        <trigger ref="settype">
            <label>Set type</label>
        </trigger>
      </group>
      <group ref="tab2">
        <label>{entity} Tab2</label>
        <select ref="location" faims_attribute_name="location" faims_attribute_type="vocab">
          <label>Location:</label>
          <item>
              <label>dummy</label>
              <value>dummy</value>
          </item>
        </select>
        <select1 ref="supervisor" faims_attribute_name="supervisor" appearance="full" faims_attribute_type="freetext">
          <label>Supervisor:</label>
            <item>
              <label>{superA}</label>
              <value>supera</value>
          </item>
          <item>
              <label>Super B</label>
              <value>superb</value>
          </item>
          <item>
              <label>Super C</label>
              <value>superc</value>
          </item>
          <item>
              <label>Super D</label>
              <value>superd</value>
          </item>
        </select1>
      </group>
    </group>
    
  </h:body>
</h:html>
