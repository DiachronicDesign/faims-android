<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Simple Example</h:title>

    <model>
      <instance>
        <faims id="simple_example">
          <tabgroup1>
              <tab1>
                  <name></name>
                  <value></value>
                  <value-description></value-description>
                  <value-certainty></value-certainty>
                  <date></date>
                  <time></time>
                  <type></type>
                  <type-description></type-description>
                  <location></location>
                  <location-value></location-value>
                  <location-certainty></location-certainty>
                  <supervisor></supervisor>
                  <save></save>
                  <update></update>
                  <load></load>
                  <clear></clear>
              </tab1>
              <tab2>
                  <type></type>
                  <name></name>
                  <save></save>
                  <update></update>
                  <load></load>
                  <clear></clear>
              </tab2>
              <tab3>
                  <entity></entity>
                  <relationship></relationship>
                  <verb></verb>
                  <save></save>
              </tab3>
          </tabgroup1>
        </faims>
      </instance>

      <bind nodeset="/faims/tabgroup1/tab1/name" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/value" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab1/value-description" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/value-certainty" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab1/date" type="date"/>
      <bind nodeset="/faims/tabgroup1/tab1/time" type="time"/>
      <bind nodeset="/faims/tabgroup1/tab1/type-description" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/location-value" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab1/location-certainty" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab2/name" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab3/verb" type="string"/>

    </model>
  </h:head>

  
  <h:body>
    <group ref="tabgroup1" faims_archent_id="Simple">
      <label>Simple Entity Example</label>
      <group ref="tab1" faims_hidden="false">
        <label>Entity</label>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <input ref="value" faims_attribute_name="value">
            <label>Value:</label>
        </input>
        <input ref="value-description" faims_attribute_name="value">
            <label>Description:</label>
        </input>
        <input ref="value-certainty" faims_attribute_name="value">
            <label>Certainty:</label>
        </input>
        <input ref="date" faims_attribute_name="date">
            <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time">
            <label>Time:</label>
        </input>
        <select1 ref="type" faims_attribute_name="type">
            <label>Type:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1>
        <input ref="type-description" faims_attribute_name="type">
            <label>Description:</label>
        </input>
        <select ref="location" faims_attribute_name="location">
            <label>Location:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select>
        <input ref="location-value" faims_attribute_name="location">
            <label>Value:</label>
        </input>
        <input ref="location-certainty" faims_attribute_name="location">
            <label>Certainty:</label>
        </input>
        <select1 ref="supervisor" faims_attribute_name="supervisor" appearance="full">
            <label>Supervisor:</label>
            <item>
                <label>Super A</label>
                <value>super a</value>
            </item>
            <item>
                <label>Super B</label>
                <value>super b</value>
            </item>
            <item>
                <label>Super C</label>
                <value>super c</value>
            </item>
            <item>
                <label>Super D</label>
                <value>super d</value>
            </item>
        </select1>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="load">
          <label>Load</label>
        </trigger>
        <trigger ref="clear">
          <label>Clear</label>
        </trigger>
      </group>
      <group ref="tab2" faims_hidden="false">
        <label>Relationship</label>
        <select1 ref="type" faims_attribute_name="type">
          <label>Type:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <input ref="name" faims_attribute_name="name">
          <label>Name:</label>
        </input>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
        <trigger ref="update">
          <label>Update</label>
        </trigger>
        <trigger ref="load">
          <label>Load</label>
        </trigger>
        <trigger ref="clear">
          <label>Clear</label>
        </trigger>
      </group>
      <group ref="tab3" faims_hidden="false">
        <label>Entity Relationship</label>
        <select1 ref="entity">
          <label>Entity:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <select1 ref="relationship">
          <label>Relationship:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
        <input ref="verb">
            <label>Verb:</label>
        </input>
        <trigger ref="save">
          <label>Save</label>
        </trigger>
      </group>
    </group>
    
  </h:body>
</h:html>
