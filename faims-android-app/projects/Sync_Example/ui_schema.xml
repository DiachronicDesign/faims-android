<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Simple Example</h:title>

    <model>
      <instance>
        <faims id="simple_example">
          <user>
              <tab1>
                  <users></users>
              </tab1>
          </user>
          <tabgroup1>
              <tab1>
                  <name></name>
                  <value></value>
                  <timestamp></timestamp>
                  <location></location>
                  <save></save>
                  <update></update>
                  <clear></clear>
              </tab1>
              <tab2>
                  <entities></entities>
                  <load></load>
              </tab2>
              <tab3>
                  <filename></filename>
                  <attach></attach>
                  <server></server>
                  <app></app>
              </tab3>
          </tabgroup1>
          
        </faims>
      </instance>

      <bind nodeset="/faims/tabgroup1/tab1/name" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/value" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab3/filename" type="string"/>
      
    </model>
  </h:head>

  
  <h:body>
    <group ref="user">
      <label>User List</label>
      <group ref="tab1" faims_scrollable="false">
        <label>User List</label>
        <select1 ref="users" appearance="compact">
          <label>Users:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
      </group>
    </group>
    <group ref="tabgroup1" faims_archent_type="small">
      <label>Entity Example</label>
      <group ref="tab1" faims_hidden="false">
        <label>Save Entity</label>
        <input ref="name" faims_attribute_name="name" faims_attribute_type="freetext">
          <label>Name:</label>
        </input>
        <input ref="value" faims_attribute_name="value" faims_attribute_type="measure">
            <label>Value:</label>
        </input>
        <input ref="timestamp" faims_attribute_name="timestamp" faims_attribute_type="freetext" faims_read_only="true" faims_certainty="false">
            <label>Timestamp:</label>
        </input>
        <select1 ref="location" faims_attribute_name="location" faims_attribute_type="vocab">
            <label>Location:</label>
            <item>
            	<label>dummy</label>
            	<value>dummy</value>
          	</item>
        </select1>
        <trigger ref="save">
            <label>Save</label>
        </trigger>
        <trigger ref="update">
            <label>Update</label>
        </trigger>
        <trigger ref="clear">
            <label>Clear</label>
        </trigger>
      </group>
      <group ref="tab2" faims_hidden="false">
        <label>Load Entity</label>
       	<select1 ref="entities" faims_certainty="false">
            <label>Entity:</label>
            <item>
            	<label>dummy</label>
            	<value>dummy</value>
          	</item>
        </select1>
        <trigger ref="load">
            <label>Load</label>
        </trigger>
      </group>
      <group ref="tab3" faims_hidden="false">
          <label>File Picker</label>
          <input ref="filename" faims_certainty="false" faims_read_only="true">
              <label>Filename:</label>
          </input>
          <trigger ref="attach">
              <label>Attach</label>
          </trigger>
          <trigger ref="server">
              <label>Save to server</label>
          </trigger>
          <trigger ref="app">
              <label>Save to app</label>
          </trigger>
      </group>
    </group>
    
  </h:body>
</h:html>
